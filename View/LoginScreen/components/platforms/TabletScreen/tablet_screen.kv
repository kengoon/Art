<LoginTabletScreenView>:
    MDBoxLayout:
        padding: "10dp"
        radius: "20dp"
        Blur:
            blur_size: 9, 6
            radius: "20dp"
            FitImage:
                source: "assets/images/1.jpg"
        BoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            AnchorLayout:
                anchor_x: "right"
                anchor_y: "top"
                MDLabel:
                    text: "Not a member? [b][color=2196F3]Register Now[/color][/b]"
                    markup: True
                    font_style: "Caption"
                    padding: "50dp", "10dp"
                    adaptive_size: True
            MDBoxLayout:
                spacing: "30dp"
                padding: "50dp", 0, "50dp", "50dp"
                orientation: "vertical"
                adaptive_height: True
                MDLabel:
                    text:
                        f"[b][size={int(sp(30))}]Hello Again![/b][/size]\n\n"\
                        "Welcome back you've been missed!"
                    markup: True
                    halign: "center"
                    font_size: "13sp"
                    adaptive_height: True
                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    spacing: "10dp"
                    TextField:
                        radius: "10dp"
                        hint_text: "Enter username"
                    TextField:
                        radius: "10dp"
                        hint_text: "Password"
                        button_icon: "eye"
                    MDTextButton:
                        text: "Recover Password"
                        bold: True
                        color: 0, 0, 0, .5
                        pos_hint: {"right": 1}
                RaisedButton:
                    text: "Sign In"
                    size_hint_x: 1
                    label_padding: "20dp", "20dp"
                    radius: "10dp"
                    on_release: app.add_screen("home screen")
                MDBoxLayout:
                    adaptive_height: True
                    spacing: "10dp"
                    padding: "10dp", 0
                    Separator:
                        colors: [[1, 1, 1, 0], [1, 1, 1, 1]]
                    MDLabel:
                        text: "Or continue with"
                        adaptive_size: True
                        font_style: "Caption"
                        halign: "center"
                    Separator:
                        colors: [[1, 1, 1, 1], [1, 1, 1, 0]]
                MDBoxLayout:
                    adaptive_height: True
                    spacing: "30dp"
                    padding: "10dp", 0
                    OutlineIconButton:
                        icon: "google"
                        size_hint_x: 1
                        line_color: 1, 1, 1, 1
                        md_bg_color: 1, 1, 1, 0
                        hover_elevate: True
                        font_style: self.md_font
                        icon_color: "red"
                        theme_icon_color: "Custom"
                    OutlineIconButton:
                        font_style: self.md_font
                        icon: "apple"
                        size_hint_x: 1
                        line_color: 1, 1, 1, 1
                        md_bg_color: 1, 1, 1, 0
                        hover_elevate: True
                    OutlineIconButton:
                        icon: "facebook"
                        font_style: self.md_font
                        size_hint_x: 1
                        line_color: 1, 1, 1, 1
                        md_bg_color: 1, 1, 1, 0
                        hover_elevate: True
                        icon_color: "blue"
                        theme_icon_color: "Custom"


