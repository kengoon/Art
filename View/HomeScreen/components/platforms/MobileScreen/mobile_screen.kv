<HomeMobileScreenView>
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        MDBoxLayout:
            adaptive_height: True
            padding: "20dp", "20dp", "20dp", 0
            MDLabel:
                text: "Artists"
                font_size: "18sp"
                adaptive_height: True
                pos_hint: {"center_y": .5}
            IconButton:
                icon: "arrow-right-l"
        RecycleView:
            id: artist_rv
            key_viewclass: "vc"
            do_scroll_y: False
            size_hint_y: None
            height: max(dp(48) - sp(24), 0) + sp(24)
            bar_width: 0
            RecycleBoxLayout:
                size_hint_x: None
                width: self.minimum_width
                spacing: "10dp"
                padding: "20dp", 0, 0, 0
                default_size_hint: None, 1
                default_size: max(dp(48) - sp(24), 0) + sp(24), 0
        BoxLayout:
            #padding: "20dp", 0
            orientation: "vertical"
            spacing: "10dp"
            MDBoxLayout:
                adaptive_height: True
                padding: "20dp", 0
                MDLabel:
                    text: "Arts"
                    font_style: "H6"
                    adaptive_height: True
                IconButton:
                    icon: "magnifying-glass-l"
            RealRecycleView:
                id: art_rv
                viewclass: "ImageCard"
                do_scroll_x: False
                swipe_direction: "vertical"
                bar_width: 0
                on_swipe_up: win.pop_bnb()
                on_swipe_down: win.push_bnb()
                RecycleGridLayout:
                    cols: 2
                    size_hint_y: None
                    height: self.minimum_height
                    default_size_hint: 1, None
                    default_size: 0, self.parent.height - (0.6 * self.parent.height)

